@model OnshoreSDAttendanceTrackerNet.Models.UserViewModel

@{
    if (@Model.IsEmployeeView)
    {
        ViewBag.Title = "ViewEmployees";
    }
    else
    {
        ViewBag.Title = "ViewUsers";
    }
}
@if (@Model.IsEmployeeView)
{
    <h2 class="UserHeader">View Employees</h2>
}
else
{
    <h2 class="UserHeader">View Users</h2>
}

    <table class="UserTable">
        <tr>
            <th></th>
            <th>Username</th>
            <th>Role ID</th>
        </tr>
        @foreach (var user in Model.ListOfUserPO)
        {
            <tr>
                <td>@Html.HiddenFor(m => user.UserID)</td>
                <td>@Html.DisplayFor(m => user.FirstName)</td>
                <td>@Html.DisplayFor(m => user.LastName)</td>
                <td>@Html.DisplayFor(m => user.Email)</td>
                <td>@Html.HiddenFor(m => user.RoleID_FK)</td>
                <td>@Html.DisplayFor(m => user.RoleName)</td>
                <td>@Html.DisplayFor(m => user.Active)</td>
                <td>@Html.ActionLink("Update User", "UpdateUserInfo", "Account", routeValues: new { UserID = user.UserID }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Password Reset", "PasswordReset", "Account", routeValues: new { UserID = user.UserID }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })</td>
                <td>@Html.ActionLink("Delete User", "DeleteUser", "Account", routeValues: new { UserID = user.UserID }, htmlAttributes: new { @class = "btn btn-primary btn-sm", onclick = "return confirm('Are you sure you want to delete this user?')" })</td>

            </tr>

        }

    </table>
    <script>
        $("#").click(function deleteAlert() {
            {
                alert("Are you sure you want to delete this User?");
            }
        });
    </script>