@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.AbsenceViewModel
@{
    ViewBag.Title = "Create New Absence";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AddAbsenceEntry", "Maint", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Absence.TeamID_FK)
    @Html.HiddenFor(model => model.Absence.AbsenceTypeID)
    @Html.HiddenFor(model => model.User.UserID)
    <div class="form-group">
        @Html.LabelFor(model => Model.User.Employee, "Employee")
        @Html.DropDownListFor(model => Model.Users, new SelectList(Model.Users, "Text", "Value", null), htmlAttributes: new { @class = "form-control", id = "UserID" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => Model.AbsenceTypes, "Absence Type")
        @Html.DropDownListFor(model => Model.AbsenceTypes, new SelectList(Model.AbsenceTypes, "Text", "Value", null), htmlAttributes: new { @class = "form-control", id = "AbsenceTypeID" })
    </div>
    <div>
        @Html.LabelFor(model => Model.Absence.Point, "Comments")
        @Html.TextBoxFor(model => Model.Absence.Point, new { @class = "form-control", @placeholder = "Client Comments" })
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Submit" />
        <input class="btn btn-danger" type="submit" value="Cancel" />
    </div>
}