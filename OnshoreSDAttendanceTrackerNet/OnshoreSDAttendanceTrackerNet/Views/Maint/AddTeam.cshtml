@model OnshoreSDAttendanceTrackerNet.Models.TeamViewModel
@{
    ViewBag.Title = "Create New Team";
}

<h2>Create New Team</h2>

@using (Html.BeginForm("AddTeam", "Maint", FormMethod.Post))
{
    <div>

        <div class="form-group">
            @Html.LabelFor(model => Model.Team.Name, "Team Name")
            @Html.TextBoxFor(model => Model.Team.Name, new { @class = "form-control", @placeholder = "Team Name" })
            @Html.ValidationMessageFor(model => Model.Team.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.Team.Comment, "Comments")
            @Html.TextBoxFor(model => Model.Team.Comment, new { @class = "form-control", @placeholder = "Client Comments" })
            @Html.ValidationMessageFor(model => Model.Team.Comment, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => Model.Team.Active, "Active")
            @Html.CheckBoxFor(model => Model.Team.Active)
            @Html.ValidationMessageFor(model => model.Team.Comment, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Submit" />
            <input class="btn btn-danger" type="submit" value="Cancel" />
        </div>
    </div>
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-6 col-md-6 mb-6">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Best Standing Team</div>

                        <!--<div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopTeam.Name</div>-->
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopTeam.Absence.RunningTotal</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-6 col-md-6 mb-6">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Team Ranker</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TeamRanker.Absence.Point</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
}