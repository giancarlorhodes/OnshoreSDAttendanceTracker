@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.AbsenceViewModel
@{
    ViewBag.Title = ViewBag.Name;
}

<h2>@ViewBag.Name</h2>

@using (Html.BeginForm("UpdateAbsenceEntry", "Maint", FormMethod.Post))
{
    @Html.HiddenFor(model => Model.Absence.AbsenceTypeID)
    @Html.HiddenFor(model => Model.Absence.AbsentUserID)
    @Html.HiddenFor(model => Model.Absence.TeamID_FK)
    @Html.HiddenFor(model => Model.Absence.TeamMgtID)
    <div class="form-group">
        @Html.LabelFor(model => Model.Absence.Name, "Absence Type")
        @Html.DropDownListFor(model => Model.Absence.AbsenceTypeID, Model.AbsenceTypes)
        @Html.ValidationMessageFor(model => Model.Absence.Name, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(model => Model.Absence.Point, "Comments")
        @Html.TextBoxFor(model => Model.Absence.Point, new { @class = "form-control", @placeholder = "Client Comments" })
        @Html.ValidationMessageFor(model => Model.Absence.Point, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Submit" />
        <input class="btn btn-danger" type="submit" value="Cancel" />
    </div>
}