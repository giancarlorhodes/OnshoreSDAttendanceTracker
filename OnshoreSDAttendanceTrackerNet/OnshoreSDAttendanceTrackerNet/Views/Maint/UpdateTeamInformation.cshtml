@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.TeamViewModel
@{
    ViewBag.Title = "Modify Team Information";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("UpdateTeamInformation", "Maint", FormMethod.Post))
{
    @Html.HiddenFor(model => Model.Team.TeamID)
    <div class="form-group">
        @Html.LabelFor(model => Model.Team.Name, "Team Name")
        @Html.TextBoxFor(model => Model.Team.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => Model.Team.Name, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(model => Model.Team.Comment, "Comments")
        @Html.TextBoxFor(model => Model.Team.Comment, new { @class = "from-control" })
        @Html.ValidationMessageFor(model => Model.Team.Comment, "", new { @class = "text-danger" })
    </div>

    <div>
        @Html.LabelFor(model => Model.Team.Active, "Active")
        @Html.CheckBoxFor(model => Model.Team.Active, new { @class = "form-control" })
        -@Html.ValidationMessageFor(model => Model.Team.Active, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Submit" />
        <input class="btn btn-danger" type="submit" value="Cancel" />
    </div>
}