@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.AbsenceViewModel
@{
    ViewBag.Title = @Model.Team.Name + "Absence Dashboard";
}

<h2>@Model.Team.Name Absences</h2>

@Html.HiddenFor(model => Model.Absence.AbsenceTypeID)
@Html.HiddenFor(model => Model.Absence.TeamID_FK)

<div class="row">

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-4 col-md-4 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Top Team</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopTeam.Team.Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopEmployee.Absence.Point</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-4 col-md-4 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Bottom Team</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BottomTeam.Team.Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BottomTeam.Absence.Point</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-4 col-md-4 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Top Standing Employee</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopEmployee.User.Employee</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopEmployee.Absence.Point</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pending Requests Card Example -->
</div>
<table class="table">
    <thead>
        <tr>
            <th>Employee Name</th>
            <th>Name</th>
            <th>Point</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AbsencePO absence in Model.ListOfPos)
        {
            <tr>
                <td>@absence.EmployeeName</td>
                <td>@absence.Name</td>
                <td>@absence.Point</td>
                <td>@absence.Active</td>
                @*TODO: Add modal for details or section for details*@
@*TODO: Add modals, graphs and other BA sugar*@
</tr>
    }
    </tbody>
    </table>
