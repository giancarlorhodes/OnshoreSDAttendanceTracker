@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.AbsenceViewModel
@{
    ViewBag.Title = @ViewBag.Name + " Team Absences";
}

<h2>@ViewBag.Name</h2>

@Html.HiddenFor(model => Model.Absence.AbsenceTypeID)
@Html.HiddenFor(model => Model.Absence.TeamID_FK)
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Employee Name</th>
                <th>Absence Type</th>
                <th>Point</th>
                <th>Absence Date</th>
                <th>@Model.Absence.Comments.ToString()</th>
            </tr>
        </thead>
        <tbody>
            @foreach (AbsencePO absence in Model.ListOfPos)
            {
                <tr>
                    <td>@Model.User.FirstName @Model.User.LastName</td>
                    <td>@absence.Name</td>
                    <td>@absence.Point</td>
                    <td>@absence.AbsenceDate</td>
                    <td><a href="">Comments</a></td>
                    @*TODO: Add modal for details or section for details*@
                    @*TODO: Add modals, graphs and other BA sugar*@
                </tr>
            }
        </tbody>
    </table>
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Absences</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">John Doe</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Alice Rivers</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Timmy Grover</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Rachel Dime</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Doris Lane</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Call-in</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">1 point</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">2019-Jul-08</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Earnings (Monthly) Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Top Standing Employee</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Jane Doe</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">.5</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pending Requests Card Example -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Team Ranker</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Finlocker</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Sneider</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">Nike</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>