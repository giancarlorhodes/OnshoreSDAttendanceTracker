@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.TeamViewModel
@{
    ViewBag.Title = "View All Teams";
}

<h2>@ViewBag.Title</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Comments</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach(TeamPO team in Model.ListOfPos)
            {
            <tr>
                <td>@team.Name</td>
                <td>@team.Comment</td>
                <td>@team.Active</td>
                <div>
                    
                    @*<td>@Html.ActionLink("Details", "Details", "Artist", new { id = Model.Team.TeamID}, new { @class = "btn btn-info" })</td>*@
                    @if (Model.User.Email != null && Model.User.RoleID_FK == 1)
                    {
                        <td>
                            @Html.ActionLink("Modify", "UpdateTeamInformation", "Maint", new { TeamID = Model.Team.TeamID }, new { @class = "btn btn-warning" })
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("Deactivate", "DeactivateTeam", "Maint", new { TeamID = Model.Team.TeamID }, new
                   {
                       @class = "btn btn-danger",
                       @onclick = string.Format("return confirm('Are you sure you want to deactivate {0}? All employees assigned will need to be re-assigned to a new team by an Admin.')",Model.Team.Name)
                   })
                        </td>
                    }
                    else { }
                </div>
            </tr>
            }
        </tbody>
    </table>
</div>