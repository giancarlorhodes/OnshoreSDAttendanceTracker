@using OnshoreSDAttendanceTrackerNet.Models
@model OnshoreSDAttendanceTrackerNet.Models.TeamViewModel
@{
    ViewBag.Title = "View All Teams";
}

<h2>@ViewBag.Title</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Team Name</th>
                <th>Comments</th>
                <th>Active</th>
            </tr>
        </thead>
        <tbody>
            @foreach (TeamPO team in Model.ListOfPos)
            {
                <tr>
                    <td>@team.Name</td>
                    <td>@team.Comment</td>
                    <td>@team.Active</td>
                    <div>

                        @*<td>@Html.ActionLink("Details", "Details", "Artist", new { id = Model.Team.TeamID}, new { @class = "btn btn-info" })</td>*@
                        @if (Model.User.Email != null && Model.User.RoleID_FK == 1)
                        {
                            <td>
                                @Html.ActionLink("Modify", "UpdateTeamInformation", "Maint", new { TeamID = Model.Team.TeamID }, new { @class = "btn btn-warning" })
                            </td>
                            <td class="text-center">
                                @Html.ActionLink("Deactivate", "DeactivateTeam", "Maint", new { TeamID = Model.Team.TeamID }, new
                       {
                           @class = "btn btn-danger",
                           @onclick = string.Format("return confirm('Are you sure you want to deactivate {0}? All employees assigned will need to be re-assigned to a new team by an Admin.')", Model.Team.Name)
                       })
                            </td>
                        }
                        else { }
                    </div>
                </tr>
            }
        </tbody>
    </table>
    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Best Standing Team</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopTeam.Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TopTeam.Absence.RunningTotal</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Earnings (Monthly) Card Example -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Team Ranker</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TeamRanker.Team.Name</div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.TeamRanker.Absence.Point</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-friends fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>