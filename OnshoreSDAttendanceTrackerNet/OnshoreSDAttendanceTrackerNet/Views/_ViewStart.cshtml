@{

    UserLoginPO _ul = Session["UserModel"] as UserLoginPO;

    if (_ul != null)
    {
        if (_ul.UserRole == RoleEnum.Administrator)
        {
            Layout = "~/Views/Shared/_Layout_Admin.cshtml";
        }
        else if (_ul.UserRole == RoleEnum.Service_Manager)
        {
            Layout = "~/Views/Shared/_Layout_Service_Manager.cshtml";
        }
        else if (_ul.UserRole == RoleEnum.Team_Lead)
        {
            Layout = "~/Views/Shared/_Layout_Team_Lead.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else {

        Layout = "~/Views/Shared/_Layout.cshtml";
    }



